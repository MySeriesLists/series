{
    "source": {
        "include": [
            "src",
            "README.md",
            "package.json"
        ],
        "includePattern": ".+\\.js$",
        "excludePattern" :  "(node_modules/|docs)"
    },
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}